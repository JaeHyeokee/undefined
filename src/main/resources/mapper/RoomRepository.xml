    <select id="findRoomsByLodgingId" resultMap="mapRoom" parameterType="java.lang.Long">
        SELECT room_id, room_name
        FROM room
        WHERE lodging_id = #{lodgingId}
    </select>

    <select id="findById" resultMap="mapRoom">
        <include refid="SELECT_BASE"/>
        AND r.room_id = #{roomId}
    </select>

    <delete id="deleteRooms" flushCache="true" parameterType="com.lec.spring.domain.Lodging">
        DELETE FROM room WHERE lodging_id = #{lodgingId}
    </delete>
</mapper>